<mica:MicaWindow x:Class="Onion.Window.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Onion.Window.ViewModels"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:mica="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--LeftSideMenu-->
        <StackPanel
            Margin="20"
            Grid.Column="0">
            <!--LeftSideMenu -> Open-->
            <ui:Card>
                <ui:Card.Content>
                    <StackPanel>
                        <TextBlock 
                            TextWrapping="WrapWithOverflow">
                            <Run Text="Выберите .zip каталог с модификациями для Java Minecraft"/>   
                            <LineBreak/>
                        </TextBlock>
                        <StackPanel 
                            Orientation="Horizontal">
                            <Button 
                                Command="{Binding OpenDialogCommand}"
                                Content="Открыть"/>
                            <Button 
                                Margin="5,0,5,0"
                                Command="{Binding OpenDialogCommand}"
                                Content="Открыть текущий"/>
                        </StackPanel>
                    </StackPanel>
                </ui:Card.Content>
            </ui:Card>
            <!--LeftSideMenu -> Settings-->
            <ui:Card>
                <ui:Card.Content>
                    <StackPanel>
                        <TextBlock
                            TextWrapping="WrapWithOverflow">
                            <Run Text="Укажите расположение каталога Minecraft"/>
                            <LineBreak/>
                        </TextBlock>
                        <TextBox
                            Text="{Binding MinecraftPath}"
                            HorizontalScrollBarVisibility="Visible"
                            IsReadOnly="True"
                            Margin="0,0,0,10"/>
                        <Button
                            Command="{Binding MinecraftPathDialogCommand}"
                            Content="Обзор папок"/>
                    </StackPanel>
                </ui:Card.Content>
            </ui:Card>
            <!--LeftSideMenu -> OperatorsBlock-->
            <ui:CardExpander
                IsEnabled="False"
                Header="Операторы">
                <ui:CardExpander.Content>
                    <StackPanel>
                        <!--Operators -> ...-->
                        
                    </StackPanel>
                </ui:CardExpander.Content>
            </ui:CardExpander>
        </StackPanel>
        
        <!--ContentFrame-->
        <Frame
            Grid.Column="1"
            Content="{Binding CurrentContent, UpdateSourceTrigger=PropertyChanged}"
            Margin="0,20,20,20"/>
    </Grid>
</mica:MicaWindow>
