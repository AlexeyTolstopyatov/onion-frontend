<Page x:Class="Onion.Window.Views.ModpackPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Onion.Window.ViewModels"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      Title="ModpackPage" Height="450" Width="800">
    <Page.DataContext>
        <local:ModpackPageViewModel/>
    </Page.DataContext>
    <Grid>
        <ui:Card
            VerticalAlignment="Top">
            <ui:Card.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock
                        Text="Modpack Name"
                        VerticalAlignment="Bottom"
                        FontSize="30"/>
                    <TextBlock
                        Grid.Row="1"
                        Text="C:\path\to\the\modpack.zip"/>
                    <!--Tables space-->
                    <Grid
                        Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <DataGrid
                            Grid.Column="1"
                            ItemsSource="{Binding Model.ModpackEntriesDataTable, UpdateSourceTrigger=PropertyChanged}">
                        </DataGrid>
                        <ui:DataGrid
                            ItemsSource="{Binding Model.ModpackDataTable, UpdateSourceTrigger=PropertyChanged}"
                            Grid.Column="0">
                        </ui:DataGrid>
                    </Grid>
                </Grid>
            </ui:Card.Content>
        </ui:Card>
    </Grid>
</Page>
